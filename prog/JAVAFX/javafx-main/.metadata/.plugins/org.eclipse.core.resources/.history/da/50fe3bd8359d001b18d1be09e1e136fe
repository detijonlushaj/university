package de.hsh.zahlenarraytest.Zeitmesser;

public class Zeitmesser {
    private String zeitmesser;
    private long time1 = 0, time2 = 0;
    
    public void start() {
        zeitmesser = "läuft";
        if (time1 == 0) { 
            time1 = System.currentTimeMillis();
        } else {
            time1 = time1 + (time2 - time1);
        }
        
    }
    
    public void stop() {
        zeitmesser = "stop";
        time2 = System.currentTimeMillis();
    }
    
    public long getGemesseneGesamtzeit() {
        return 
    }
}
