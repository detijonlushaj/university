package application;

import javafx.geometry.Pos;
import javafx.scene.Scene;
import javafx.scene.control.Button;
import javafx.scene.control.Label;
import javafx.scene.control.TextField;
import javafx.scene.layout.VBox;
import javafx.stage.Stage;

public class Scene1 {
    private Stage stage;
    private VBox layout = new VBox();
    private Scene scene = new Scene(layout, 300, 300);
    private Label label1 = new Label("This is the First Scene");
    private Button button = new Button("Forward");
    private TextField text = new TextField(); 
    
    Scene1(Stage stage) {
        this.stage = stage;
        this.setLayout();
    }
    
    public void setLayout() {
        layout.setAlignment(Pos.CENTER);
    }
    
    public void button1(Scene scene) {
        button.setOnAction(e -> SceneController.switchScene(stage, scene));
    }
    
    public Scene getScene() {
        return scene;
    }
}
